{
  "name": "Emojifi",
  "version": "1.0",
  "description": "Emoji, in Chrome, like in some space future.",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "emojione/assets/png/1F600.png",
    "default_popup": "popup.htm"
  },
  "permissions":  [
    "tabs",
    "http://*/",
    "https://*/",
    "unsafe-inline"
  ],
  "web_accessible_resources":[
    "emojione/assets/*",
    "emojione/lib/js/*"
  ],
  "manifest_version": 2
}
